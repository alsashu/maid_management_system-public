@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model MaidManagementSolutions.ViewModel.UserViewModel
@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_LayoutCustomize.cshtml";
}
<link href="~/content/assets/css/material-dashboard.css?v=2.1.0" rel="stylesheet" />
<meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
<!--     Fonts and icons     -->
<link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css">
<!-- CSS Files -->
<link href="~/content/assets/css/material-dashboard.css?v=2.1.0" rel="stylesheet" />
<!-- CSS Just for demo purpose, don't include it in your project -->
<link href="~/content/assets/demo/demo.css" rel="stylesheet" />
<style>
    .divider:after,
    .divider:before {
        content: "";
        flex: 1;
        height: 1px;
        background: #eee;
    }

    .modal {
        --bs-modal-width: 1188px !important;
    }

    .iam {
        color: white;
        font-size: 24px;
        padding: 15px;
        font-family: sans-serif;
        color: black;
    }

    .text {
        /*border-right: 2px solid rgb(255 119 2);*/
        font-size: 24px;
        font-family: sans-serif;
        color: rgb(255 119 2);
    }

    .text-type {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    .text-body {
        /* background-color: black;*/
        display: flex;
        justify-content: center;
        align-items: center;
        /*min-height: 100vh;*/
    }

    .typed-cursor {
        display: none !important; /* Hide the cursor */
    }

    .typed-cursor--blink {
        display: none !important; /* Hide the cursor */
    }

    .card-signup {
        margin-bottom: 0px !important;
        padding: 0px !important;
        margin-top: 0vh !important;
    }

    .off-canvas-sidebar .wrapper-full-page .page-header {
        padding: 15vh 0 !important;
    }

    .btn.btn-primary {
        color: #fff;
        background-color: #2b9061 !important;
        border-color: #2b9061 !important;
        box-shadow: 0 2px 2px 0 rgba(156, 39, 176, 0.14), 0 3px 1px -2px rgba(156, 39, 176, 0.2), 0 1px 5px 0 rgba(156, 39, 176, 0.12);
    }

    .btn.btn-twitter {
        background-color: #2b9061 !important;
        border-color: #2b9061 !important;
    }

    .btn.btn-dribbble {
        background-color: #2b9061 !important;
        border-color: #2b9061 !important;
    }

    .btn.btn-facebook {
        background-color: #2b9061 !important;
        border-color: #2b9061 !important;
    }

    .register-page .card-signup .form-check a {
        color: #2b9061 !important;
    }
</style>

<div class="container">

    <div class="row">
        <div class="col-md-10 ml-auto mr-auto">
            <div class="card card-signup">
                <h2 class="card-title text-center">Register with Maidfolio</h2>
                <p class="text-center">
                    India's reliable household providers
                </p>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-5 ml-auto">
                            <img src="~/content/assets/img/reg-maid.jpeg" alt="Image" class="img-fluid" />
                        </div>
                        <div class="col-md-5 mr-auto">

                            <form class="form" asp-action="Registration">
                                <span class="bmd-form-group">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                </span>
                                <div class="form-group has-default">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="material-icons">face</i>
                                            </span>
                                        </div>
                                        <input asp-for="Username" type="text" class="form-control" placeholder="Username...">
                                    </div>
                                </div>
                                <span style="display: block; padding-left: 55px;" asp-validation-for="Username" class="text-danger"></span>

                                <div class="form-group has-default">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="material-icons">phone_iphone</i>
                                            </span>
                                        </div>
                                        <input asp-for="PhoneNumber" type="text" class="form-control" placeholder="Phone Number...">
                                    </div>
                                    <span style="display: block; padding-left: 55px;" asp-validation-for="PhoneNumber" class="text-danger next"></span>
                                </div>
                                <div class="form-group has-default">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="material-icons">lock_outline</i>
                                            </span>
                                        </div>
                                        <input asp-for="Password" type="password" placeholder="Password..." class="form-control">
                                    </div>
                                    <span style="display: block; padding-left: 55px;" asp-validation-for="Password" class="text-danger"></span>

                                </div>
                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input asp-for="IsTermsAccepted" class="form-check-input" type="checkbox">
                                        <span class="form-check-sign">
                                            <span class="check"></span>
                                        </span>
                                        I agree to the
                                        <a href="#something">terms and conditions</a>.
                                    </label>
                                </div>
                                <span style="display: block; padding-left: 55px;" asp-validation-for="IsTermsAccepted" class="text-danger"></span>

                                <div class="text-center">
                                     <input type="submit" class="btn btnmain" value="Get Started" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>


<script src="https://cdnjs.cloudflare.com/ajax/libs/typed.js/2.0.11/typed.min.js" integrity="sha512-BdHyGtczsUoFcEma+MfXc71KJLv/cd+sUsUaYYf2mXpfG/PtBjNXsPo78+rxWjscxUYN2Qr2+DbeGGiJx81ifg==" crossorigin="anonymous"></script>
<script>

    var typing = new Typed(".text", {
        strings: ["", "domestic help", "cooking", "cleaning", "babysitter", "cloth washing", "patient care", "elder care", "kitchen helper", "japa maid", "all-rounders"],
        typeSpeed: 100,
        backSpeed: 40,
        loop: true,
    });

    function onSubmitSuggestion() {
        //let suggestion = document.getElementById('txtSuggestion');
        let suggestion = $('#txtSuggestion').val();

        $.ajax({
            url: '/business/home/addsuggestion?sugg=' + suggestion,
            type: 'GET',
            success: function (response) {
                let jdata = JSON.parse(response);
                alert(jdata.Records);
                document.getElementById('txtSuggestion').value = '';
            },
            error: function (error) {
                console.log(error);
            }
        });
    }

</script>
